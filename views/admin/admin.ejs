<%- include('../partials/header') %> 

   <!-- Page Header -->
   <header class="masthead" style="background-image: url('https://images.unsplash.com/photo-1614595302403-444d33a6fd46?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=334&q=80')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Admin Dashboard</h1>
          </div>
        </div>
      </div>
    </div>
  </header>


  <div class="container">
    <% adminActions.forEach( (action) =>{ %> 
  <div class="row">
      <div class="col-lg-4 mx-auto">
        <button id="<%=action.actionId%>" onclick="catchID(this.id)" type="button" class="btn btn-outline-primary btn-block float-left"><%=action.displayName%> </button>
      </div>
    </div>
  <% }); %> 

</div>

<script>
    function catchID(clicked_id){
        alert(clicked_id + "numaralı butona tıklandı. ");
        if(clicked_id == 1){
            window.location.href='changeHomeImage'; return false;
        }
        if(clicked_id == 4){
            window.location.href='addNewBlog'; return false;
        }
    }
</script>


